{
"simulation_name": "depolymerization_timecourse",
"long_description": "Two stage simulation: growth, and depolymerization.",

"_comment": "Simulation for Mitchison PNAS Vol. 105, No. 43 (2008)",

"stage_sequence": ["growth", "depolymerization"],

"stages": {
    "growth":{
        "duration": 60,
        "end_conditions":[["random_duration", 60]],
        "data_collectors":{},
        "polymerization":{"t":{"type": "fixed_concentration",
                               "concentration": 3}}},
    "depolymerization":{
        "duration": 3000,
        "end_conditions":[["duration", 3000]],
        "data_collectors":["simulation_time",
                           "strand_length"]}},

"barbed_end":  true,
"pointed_end": false,

"initial_size": 10,
"seed_state": "inactive"
}
